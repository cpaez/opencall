<!DOCTYPE html>
<html ng-app="openCall">
<head>
  <title>OpenCall</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag '//code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css', :media => "all" %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">
    var CURRENT_USER_AVATAR = "<%= current_user.avatar_url if current_user %>";
  </script>
</head>
<body>
  <div class="navbar-wrapper">
    <div class="container">
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" ng-href="<%= "#{root_url}#/home" %>">Call for papers</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="user-menu-link">
                    <%= current_user.email %> &nbsp;
                    <%= image_tag(avatar_for(current_user), :class => 'avatar img-circle', :title => current_user.email) %>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Perfil", edit_user_registration_path %></li>
                    <li><%= link_to "Cambiar contraseña", reset_user_password_path %></li>
                    <li class="divider"></li>
                    <li><a href="#/home">Mis propuestas</a></li>
                    <li><a href="#/home">Mis votos</a></li>
                    <li><a href="#/home">Mis favoritas</a></li>
                    <li class="divider"></li>
                    <li class="dropdown-header">Administrador</li>
                    <li><a href="#/home">Puedo ver esto como admin</a></li>
                    <li class="divider"></li>
                    <li class="dropdown-header">Reviewer</li>
                    <li><a href="#/home">Puedo ver esto como reviewer</a></li>
                    <li class="divider"></li>
                    <li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, id: 'signout-link' %></li>
                  </ul>
                </li>
              <% else %>
                <li style="padding:0 5px">
                  <div class="btn btn-primary btn-sm navbar-btn">
                    <%= link_to "Sign up", new_user_registration_path %>
                  </div>
                </li>
                <li style="padding:0 5px">
                  <div class="btn btn-default btn-sm navbar-btn">
                    <%= link_to "Sign in", new_user_session_path %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>

  <div class="container content">
    <%= render :partial => 'layouts/messages' %>  

    <%= yield %>
  </div>
</body>
</html>
