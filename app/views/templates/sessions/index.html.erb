<div ng-cloak ng-init="init()" ng-cloak fade-animation="true" class="row">
  <h2 class="text-center">Y los temas candidatos son...</h2>

  <div class="row" style="padding:0 25px">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 form-group has-feedback">
      <input type="text" class="form-control" ng-model="searchTerms">
      <span class="glyphicon glyphicon-search form-control-feedback" style="margin-right:15px" aria-hidden="true"></span>
    </div>
    <button id="" class="btn btn-primary" ng-click="search()">Buscar</button>
  </div>

  <div class="col-md-8 scrollable" style="height:500px"><br>
    <div ng-repeat="session in sessions" class="session-summary" fade-animation="true">
      <h3>
        {{session.title}} 
        <span class="actions pull-right">
          <span ng-click="vote($index)" ng-if="!session.voted" class="ion-android-checkbox-outline-blank text-success"></span>
          <span ng-click="vote($index)" ng-if="session.voted" class="ion-android-checkbox-outline text-success"></span>
          <span class="ion-chatboxes text-muted"><span style="color:white;font-size:37%;margin-left:-16px;margin-right:7px;vertical-align:super;font-weight:400">2</span></span>
          <span ng-click="fav($index)" ng-if="!session.faved" class="ion-android-star-outline text-warning"></span>
          <span ng-click="fav($index)" ng-if="session.faved" class="ion-android-star text-warning"></span>
        </span>      
      </h3>
      <div class="author">{{session.author}}</div>
      <p>{{session.description}}</p>
      <div><ul class="list-inline">
        <li ng-repeat="tag in session.tags track by $index" class="tag sm bg-primary" ng-click="search(tag)">
          {{tag}}
        </li>
      </ul></div>
    </div>
  </div>

  <div class="col-md-offset-1 col-md-3">
    <div class="action-button-container">
      <a class="img-circle btn-action info non-clickable" rubber-band-animation="availableVotes">
        <span class="text" aria-hidden="true">{{availableVotes}}</span>
      </a>
      <div class="divisor"></div>
      <a class="img-circle btn-action info">
        <span class="text" aria-hidden="true">?</span>
      </a>
      <div class="divisor"></div>
      <a class="img-circle btn-action primary" href="<%= root_url + '#/sessions/new' %>">
        <span class="ion-android-add icon" aria-hidden="true"></span>
      </a>
    </div>
    <br><br>
    <div ng-if="matched_tags.length > 0">
      <h3>Otros tags relevantes</h3>
      <ul class="list-inline">
        <li ng-repeat="tag in matched_tags track by $index" class="tag lg bg-primary" ng-click="search(tag.key)">
          {{tag.key}} <small>({{tag.doc_count}})</small>
        </li>
      </ul>
    </div>
  </div>
</div>

