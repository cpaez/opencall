<div class="container" ng-cloak ng-init="getReviewsStatus()" fade-animation="true">
  <div class="col-sm-10">
    <h3><%= t('reports.labels.title.reviews_status') %></h3><br>

    <table class="table table-hover table-condensed" ng-if="sessions.length > 0">
      <thead>
        <th width="30%"><%= t('reports.labels.session') %></th>
        <th width="25%"><%= t('reports.labels.theme') %></th>
        <th width="35%"><%= t('reports.labels.reviews') %></th>
        <th width="10%"></th>
      </thead>
      <tr ng-repeat="session in sessions" class="reviews-status-summary" ng-show="isVisibleTheme(session.theme)">
        <td class="session">
          <h5>
            <a ng-href="#/sessions/show/{{session.id}}" target="_blank">{{session.title}}</a><br>
            <small><i>{{session.author}}</i></small>
          </h5>
        </td>
        <td class="theme"><small>{{session.theme}}</small></td>
        <td>
          <ul ng-repeat="review in session.reviews">
            <li class="reviews">
              <small>
                {{review.reviewer}} - {{review.second_reviewer}}
                <span ng-class="{'glyphicon glyphicon-ok text-success': isAcceptedReview(review.status), 'glyphicon glyphicon-remove text-danger': isRejectedReview(review.status), 'glyphicon glyphicon-refresh text-warning': isPendingReview(review.status)}"></span>
              </small>
            </li>
          </ul>
        </td>
        <td class="actions">
          <a ng-href="#/sessions/review/{{session.id}}" class="btn btn-xs btn-success">
            <%= t('reviews.buttons.start') %> &nbsp; 
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    </table>
  </div>
  <div ng-include="'templates/themes_list.html'"></div>
</div>
