<div class="container marketing" ng-cloak fade-animation="true">
  <div class="row featurette">
    <div class="col-sm-12">
      <h2 class="featurette-heading"><%= t('home.announcement.title') %></h2>
      <p class="lead"><%= t('home.announcement.body').html_safe %></p>
    </div>
  </div>
  <hr class="featurette-divider">

  <div class="row text-center">
    <% if current_user %>
      <div class="col-xs-6">
        <div class="home-button-container">
          <a class="img-circle home-button" href="<%= root_url + '#/sessions/new' %>">
            <span class="glyphicon glyphicon-pencil icon" aria-hidden="true"></span><br>
            <span class="text"><%= t('home.propose.title') %></span>
          </a>
        </div>
        <p class="home-button-text hidden-xs"><%= t('home.propose.paragraph') %></p>
      </div>
      <div class="col-xs-6">
        <div class="home-button-container">
          <a class="img-circle home-button" href="<%= root_url + '#/sessions' %>">
            <span class="glyphicon glyphicon-thumbs-up icon" aria-hidden="true"></span><br>
            <span class="text"><%= t('home.vote.title') %></span>
          </a>
        </div>
        <p class="home-button-text hidden-xs"><%= t('home.vote.paragraph') %></p>
      </div>
    <% else %>
      <div class="col-xs-12">
        <div class="home-button-container">
          <a class="img-circle home-button" href="<%= root_url + '#/sessions' %>">
            <span class="ion-cube icon" aria-hidden="true"></span><br>
            <span class="text"><%= t('home.explore.title') %></span>
          </a>
        </div>
        <p class="home-button-text hidden-xs"><%= t('home.explore.paragraph') %></p>
      </div>
    <% end %>
  </div>
</div>
