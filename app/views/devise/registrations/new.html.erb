<h2>Sign up</h2>

<div class="col-sm-7">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

    <div class="<%= validation_error_class? :first_name %>">
      <label for="input-firstname" class="col-sm-3 control-label">Nombre</label>
      <div class="col-sm-7">
        <%= f.text_field :first_name, class: "form-control", id: "input-firstname", placeholder: "Nombre" %>
        <%= validation_error_details? :first_name %>
      </div>
    </div>

    <div class="<%= validation_error_class? :last_name %>">
      <label for="input-lastname" class="col-sm-3 control-label">Apellido</label>
      <div class="col-sm-7">
        <%= f.text_field :last_name, class: "form-control", id: "input-lastname", placeholder: "Apellido" %>
        <%= validation_error_details? :last_name %>
      </div>
    </div>

    <div class="form-group">
      <label for="input-country" class="col-sm-3 control-label">Pais</label>
      <div class="col-sm-7">
        <%= f.select :country, options_for_select(["Argentina", "Bolivia", "Colombia", "Ecuador"]), {}, { class: "form-control selectpicker", id: "input-country" } %>
      </div>
    </div>

    <div class="<%= validation_error_class? :email %>">
      <label for="input-email" class="col-sm-3 control-label">Email</label>
      <div class="col-sm-7">
        <%= f.email_field :email, class: "form-control", id: "input-email", placeholder: "Email" %>
        <%= validation_error_details? :email %>
      </div>
    </div>

    <div class="<%= validation_error_class? :password %>">
      <label for="input-password" class="col-sm-3 control-label">Contraseña</label>
      <div class="col-sm-7">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "input-password", placeholder: "Contraseña" %>
        <%= validation_error_details? :password %>
        <% if @validatable %>
          <small class="text-muted"><%= @minimum_password_length %> caracteres mínimo</small>
        <% end %>
      </div>
    </div>

    <div class="<%= validation_error_class? :password_confirmation %>">
      <label for="input-password2" class="col-sm-3 control-label">Repetir Contraseña</label>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "input-password2", placeholder: "Contraseña" %>
        <%= validation_error_details? :password_confirmation %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <button type="submit" class="btn btn-primary">Sign up</button>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/social_login" %>
