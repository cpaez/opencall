<br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="<%= validation_error_class? :first_name %>">
    <label for="input-firstname" class="col-sm-2 control-label">Nombre</label>
    <div class="col-sm-6">
      <%= f.text_field :first_name, class: "form-control", id: "input-firstname", placeholder: "Nombre" %>
      <%= validation_error_details? :first_name %>
    </div>
  </div>

  <div class="<%= validation_error_class? :last_name %>">
    <label for="input-lastname" class="col-sm-2 control-label">Apellido</label>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control", id: "input-lastname", placeholder: "Apellido" %>
      <%= validation_error_details? :last_name %>
    </div>
  </div>

  <div class="form-group">
    <label for="input-country" class="col-sm-2 control-label">Pais</label>
    <div class="col-sm-6">
      <%= f.select :country, options_for_select(["Argentina", "Bolivia", "Colombia", "Ecuador"], :selected => f.object.country), {}, { class: "form-control selectpicker", id: "input-country" } %>
    </div>
  </div>

  <div class="<%= validation_error_class? :email %>">
    <label for="input-email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-6">
      <%= f.email_field :email, class: "form-control", id: "input-email", placeholder: "Email" %>
      <%= validation_error_details? :email %>
    </div>
  </div>

  <div class="form-group">
    <label for="input-website" class="col-sm-2 control-label">Website/Blog</label>
    <div class="col-sm-6">
      <%= f.url_field :website, class: "form-control", id: "input-website", placeholder: "Website" %>
    </div>
  </div>

  <div class="form-group">
    <label for="input-bio" class="col-sm-2 control-label">Bio</label>
    <div class="col-sm-6">
      <ul class="nav nav-tabs" ng-init="bio = true">
        <li role="presentation" ng-class="{active: bio}"><a ng-click="bio = !bio"><small>Texto</small></a></li>
        <li role="presentation" ng-class="{active: !bio}"><a ng-click="bio = !bio"><small>Redes sociales</small></a></li>
        <div class="text-right"><small class="text-muted">
          <i>Puedes describirte o bien <br> referenciar tu perfil en las redes sociales</i>
        </small></div>
      </ul>
      <div ng-if="bio" fade-animation="true">
        <%= f.text_area :bio, class: "form-control", id: "input-bio", placeholder: "Bio", rows: 10 %>
      </div>
      <div ng-if="!bio" fade-animation="true">
        <br>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="input-linkedin" class="col-sm-2 control-label">LinkedIn</label>
            <div class="col-sm-10">
              <%= f.url_field :linkedin, class: "form-control", id: "input-linkedin", placeholder: "i.e.: http://linkedin.com/pub/..." %>
            </div>
          </div>
          <div class="form-group">
            <label for="input-aboutme" class="col-sm-2 control-label">AboutMe</label>
            <div class="col-sm-10">
              <%= f.url_field :aboutme, class: "form-control", id: "input-aboutme", placeholder: "i.e.: http://about.me/..." %>
            </div>
          </div>
          <div class="form-group">
            <label for="input-twitter" class="col-sm-2 control-label">Twitter</label>
            <div class="col-sm-10">
              <%= f.url_field :twitter, class: "form-control", id: "input-twitter", placeholder: "i.e.: http://twitter.com/..." %>
            </div>
          </div>
          <div class="form-group">
            <label for="input-facebook" class="col-sm-2 control-label">Facebook</label>
            <div class="col-sm-10">
              <%= f.url_field :facebook, class: "form-control", id: "input-facebook", placeholder: "i.e.: http://facebook.com/..." %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row"><div class="col-sm-offset-2 col-sm-6"><hr></div></div>

  <div class="<%= validation_warning_class? :current_password %>">
    <label for="input-password3" class="col-sm-2 control-label">Contraseña Actual</label>
    <div class="col-sm-6">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control", id: "input-password3", placeholder: "Contraseña" %>
      <%= validation_warning_details? :current_password %>
      <small class="text-muted">necesitas ingresar tu contraseña actual para poder confirmar algún cambio</small>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <button type="submit" class="btn btn-primary">Guardar</button>
      <div class="btn btn-default"><%= link_to "Volver", :back %></div>
      <br><hr>
      <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span> &nbsp; Borrar mi cuenta".html_safe, registration_path(resource_name), data: { confirm: "Tu cuenta será borrada de forma permanente y no tiene vuelta atrás. Deseas borrarla?" }, method: :delete, class: "btn btn-danger pull-right" %>
    </div>
  </div>
<% end %>
