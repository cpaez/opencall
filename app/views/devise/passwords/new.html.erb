<h2>Forgot your password?</h2><br>
<h4>We can email you instruction so you can reset it</h4><br>

<div class="col-sm-7">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>

    <div class="form-group">
      <label for="input-email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class: "form-control", id: "input-email", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <button id="signin-button" type="submit" class="btn btn-primary">Send</button>
      </div>
    </div>
  <% end %>
</div>
