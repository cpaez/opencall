<h2>Bienvenido!</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

  <div class="form-group">
    <label for="input-email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "input-email", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <label for="input-password" class="col-sm-2 control-label">Contraseña</label>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "input-password", placeholder: "Contraseña" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.check_box :remember_me %>
        <small><%= f.label 'Recordarme' %></small>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <button id="signin-button" type="submit" class="btn btn-primary">Ingresar</button>
    </div>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider) %><br />
  <% end -%>
<% end -%>
